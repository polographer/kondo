
<h1>Pictures</h1>

<table>
  <thead>
    <tr>
      <th>Thumb</th>
      <th>Filename</th>
      <th>Will organize</th>
      <th>Will research</th>
      <th>Extension</th>
      <th>Raw</th>
      <th>Filesystem date</th>
      <th>Picture date</th>
      <th>Size</th>
      <th>Exif</th>
      <th>Meta</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= picture.web.attached? ? (image_tag picture.web.variant(resize_to_limit: [100, 100])) : "" %></td>
        <td><%= picture.filename %></td>
        <td><%= picture.will_organize %></td>
        <td><%= picture.will_research %></td>
        <td><%= picture.extension %></td>
        <td><%= picture.is_raw_image? %></td>
        <td><%= picture.filesystem_date %></td>
        <td><%= picture.picture_date %></td>
        <td><%= picture.size %></td>
        <td><%= not picture.exif.blank? %></td>
        <td><%= picture.meta %></td>
        <td><%= link_to 'Show', picture %></td>
        <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
        <td><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Picture', new_picture_path %>
