
<h1>Pictures</h1>

<table style="margin:1">
  <thead>
    <tr>
      <% for i in 0..@columns do %>
      <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each_with_index do |picture, index| %>
      <% if ((index) % @columns) == 0 %>
        <tr>
      <% end %>
        <td>
        <div class="card" style="width: 7rem;">
  <!-- <img class="card-img-top" src="..." alt="Card image cap">  -->
          <%= picture.web.attached? ? (image_tag picture.web.variant(resize_to_limit: [100, 100])) : "" %>

          <div class="card-body">
            <p class="card-text">Click to select.</p>
          </div>
        </div>
        
        
        </td>
      <% if ((index+1) % @columns) == 0 %>
        </tr>
      <% end %>      
    <% end %>
  </tbody>
</table>

<br>

